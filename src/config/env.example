# API Key de servicio para comunicación interna
# Esta clave permite acceso completo a la API desde servicios internos
# sin necesidad de validación en la base de datos
SERVICE_API_KEY=your_internal_service_api_key_here

# Clave de encriptación para API keys
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# Configuración de SMTP para emails
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=no-reply@example.com

# Configuración de filtros de seguridad para emails
# Lista de direcciones no-reply adicionales a bloquear (separadas por coma)
NO_REPLY_EMAILS=noreply@yourcompany.com,automated@yourcompany.com,system@yourcompany.com

# SendGrid API (opcional)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=no-reply@example.com
SENDGRID_FROM_NAME=Your Company

# URLs de la aplicación
NEXT_PUBLIC_APP_URL=https://app.example.com
NEXT_PUBLIC_ORIGIN=https://api.example.com
VERCEL_URL=your-vercel-url.vercel.app

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_key

# Google Cloud
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_from_stripe

# Branding
UNCODIE_BRANDING_TEXT=Your Company, your AI Sales Team
UNCODIE_SUPPORT_EMAIL=support@example.com
UNCODIE_COMPANY_NAME=Your Company
UNCODIE_COMPANY_TAGLINE=AI-powered team collaboration

# Clave alternativa de encriptación (solo desarrollo)
ALT_ENCRYPTION_KEY=your_alt_encryption_key

# APIs de Screenshot (configurar al menos una)
SCREENSHOTMACHINE_API_KEY=your_screenshotmachine_api_key
SCREENSHOTLAYER_API_KEY=your_screenshotlayer_api_key
SCREENSHOTSCLOUD_KEY=your_screenshotscloud_key
SCREENSHOTSCLOUD_SECRET=your_screenshotscloud_secret

# Temporal Configuration
# Para desarrollo: solo configura TEMPORAL_ENV=development
TEMPORAL_ENV=development
TEMPORAL_SERVER_URL=localhost:7233
TEMPORAL_NAMESPACE=default
WORKFLOW_TASK_QUEUE=default

# Para Temporal Cloud (opcional)
# TEMPORAL_CLOUD_API_KEY=your_temporal_cloud_api_key

# NeverBounce Email Validation
# Obten tu API key en: https://app.neverbounce.com/settings/api
NEVER_BOUNCE_API_KEY=your_neverbounce_api_key

# AI Provider Configuration
# Portkey API Key - Get from https://app.portkey.ai/api-keys
PORTKEY_API_KEY=your_portkey_api_key

# AI Provider Keys (used as virtual keys through Portkey)
ANTHROPIC_API_KEY=your_anthropic_api_key
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
GEMINI_API_KEY=your_gemini_api_key

# Microsoft Azure OpenAI Configuration (for direct Robot execution - separate from Portkey)
MICROSOFT_AZURE_OPENAI_API_KEY=your_microsoft_azure_openai_api_key
MICROSOFT_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
MICROSOFT_AZURE_OPENAI_DEPLOYMENT=gpt-4o
MICROSOFT_AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Vercel AI Gateway Configuration (fallback service)
VERCEL_AI_GATEWAY=your_vercel_ai_gateway_url_here
VERCEL_AI_GATEWAY_API_KEY=your_vercel_ai_gateway_api_key_here

# Forager API (Finder proxy)
FORAGER_API_KEY=your_forager_api_key
FORAGER_ACCOUNT_ID=your_forager_account_id